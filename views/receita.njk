{% extends "layout.njk"%}

{% block head %}
    <title>{{item.title}}</title>
    <link rel="stylesheet" href="/receita.css">
{% endblock head %}

{% block content %}
    
    

    <div class="card" id="{{recipe.id}}">
        <div class="img-container">
            <img src="{{recipe.image}}" alt="imagem de {{recipe.title}}">
        </div>
        <div class="dish-name">
            <p>{{recipe.title}}</p>
        </div>
        <div class="author">
            <p>por {{recipe.author}}</p>
        </div>
    </div>

    <div class="ingredients">
        <h3>Ingredientes: <button class="showhide-bt">Esconder</button></h3>
        <ul class="showhide-cont">
            {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="prep">
        <h3>Modo de Preparo: <button class="showhide-bt">Esconder</button></h3>
        <ul class="showhide-cont">
            {% for prep in recipe.preparation %}
                <li>{{prep}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="info">
        <h3>Informações Adicionais: <button class="showhide-bt">Esconder</button></h3>
        <p class="showhide-cont">{{recipe.preparation}}</p>
    </div>
    

    <script src="/scripts.js"></script>
    
{% endblock content %}
